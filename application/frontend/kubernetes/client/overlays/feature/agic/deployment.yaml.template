apiVersion: apps/v1
kind: Deployment
metadata:
  name: microtodo-frontend

spec:

  replicas: 1
  template:
    spec:
      containers:
        - name: microtodo-frontend
          image: thinkexception.azurecr.io/microtodo-frontend:<Tag>
      
          env:
          - name: BLAZOR_ENVIRONMENT
            value: "Development"
          - name: Dependencies__APIs__TodosApiBaseUrl
            value: http://microtodo-dev-1.westeurope.cloudapp.azure.com/api/todos
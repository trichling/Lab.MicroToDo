@page "/todos/create"

@using Contracts.Todos;

@inject HttpClient Http
@inject NavigationManager NavigationManager


<h1>Neues Todo</h1>

<EditForm Model="@newTodo" OnValidSubmit="CreateTodo">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="title">Title:</label>
        <InputText id="title" class="form-control" @bind-Value="newTodo.Title" />
        <ValidationMessage For="@(() => newTodo.Title)" />
    </div>

    <div class="form-group">
        <label for="isDone">Is Done:</label>
        <InputCheckbox id="isDone" class="form-check" @bind-Value="newTodo.IsCompleted" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</EditForm>

@code {
    private TodoViewModel newTodo = new TodoViewModel();

    private async Task CreateTodo()
    {
        var response = await Http.PostAsJsonAsync("http://localhost:5292/todos", newTodo);
        if (response.IsSuccessStatusCode)
        {
            NavigationManager.NavigateTo("todos");
        }
        else
        {
            // Handle failure
        }
    }
}